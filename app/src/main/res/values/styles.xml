<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="FontRegular">
        <item name="fontPath">fonts/sansation_regular.ttf</item>
    </style>

    <style name="FontMedium">
        <item name="fontPath">fonts/sansation_bold.ttf</item>
    </style>

    <style name="FontMediumMontserrat">
        <item name="fontPath">fonts/montserrat_medium.otf</item>
    </style>

    <style name="styleTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/YourTextAppareance</item>
    </style>

    <style name="YourTextAppareance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">fonts/sansation_bold.ttf</item>
        <item name="android:textAppearance">@style/FontMedium</item>

    </style>


</resources>
